<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tvContactCardImageItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:layout_marginLeft="@dimen/common_margin_max"
        android:text="@string/app_name"
        android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle" />
    <android.support.v4.widget.Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/ivContactCardImageItevValue"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/common_margin_max"
        android:src="@drawable/ic_launcher"
        android:layout_marginRight="@dimen/common_margin_min"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tvContactCardNextIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:text="ã€‰"
        android:layout_marginRight="@dimen/common_margin_max"/>
</android.support.v7.widget.LinearLayoutCompat>
