<android.support.v4.widget.DrawerLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/configDrawer"
	android:layout_height="match_parent"
	android:layout_width="match_parent"
	>
	<android.support.v7.widget.LinearLayoutCompat
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">
		<android.support.v7.widget.Toolbar
			android:id="@+id/toolBar"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:theme="@style/ToolbarTheme"
			app:logo="@drawable/ic_launcher"
		/>
		<FrameLayout
			android:id="@+id/fragment_layout"
			android:layout_width="fill_parent"
			android:layout_height="0dp"
			android:layout_weight="1">
		</FrameLayout>
		<android.support.v7.widget.LinearLayoutCompat
			android:id="@+id/actionBar"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:orientation="horizontal"
			android:background="@color/blue"
			>
			<Button
				android:id="@+id/message"
				android:layout_height="match_parent"
				android:layout_width="1dp"
				android:layout_marginLeft="0dp"
				android:layout_marginTop="0dp"
				style="?android:attr/borderlessButtonStyle"
				android:text="@string/message_button_name"
				android:background="@drawable/button"
				android:textColor="@color/white"
			/>
			<Button
				android:id="@+id/contacts"
				android:layout_height="match_parent"
				android:layout_width="1dp"
				android:layout_marginLeft="0dp"
				android:layout_marginTop="0dp"
				style="?android:attr/borderlessButtonStyle"
				android:text="@string/contacts_button_name"
				android:background="@drawable/button"
				android:textColor="@color/white"
			/>
			<Button
				android:id="@+id/pandora"
				android:layout_height="match_parent"
				android:layout_width="1dp"
				android:layout_marginLeft="0dp"
				android:layout_marginTop="0dp"
				style="?android:attr/borderlessButtonStyle"
				android:text="@string/pandora_button_name"
				android:background="@drawable/button"
				android:textColor="@color/white"
			 />
		</android.support.v7.widget.LinearLayoutCompat>
    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/drawerPanel"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
		android:background="@color/DarkSeaGreen">
        <ListView
            android:id="@+id/drawerListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:choiceMode="singleChoice"
            android:foreground="@color/black"
            android:divider="@android:color/holo_red_dark"
            android:dividerHeight="1dp"
            android:layout_weight="1"
            >
        </ListView>
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/red"
                android:layout_weight="1"
                />
            <Button
                android:id="@+id/btnLogout"
				android:layout_marginRight="@dimen/login_button_margin"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_margin="@dimen/login_button_margin"
                android:text="@string/logout_button_text"
                />
        </android.support.v7.widget.LinearLayoutCompat>
    </android.support.v7.widget.LinearLayoutCompat>
</android.support.v4.widget.DrawerLayout>
