<android.support.v4.widget.DrawerLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/drawerConfig"
	android:layout_height="match_parent"
	android:layout_width="match_parent">
	<android.support.v7.widget.LinearLayoutCompat
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">
		<android.support.v7.widget.Toolbar
			android:id="@+id/tbMain"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
		/>
		<FrameLayout
			android:id="@+id/layoutFragmentContainer"
			android:layout_width="fill_parent"
			android:layout_height="0dp"
			android:layout_weight="1">
		</FrameLayout>
		<android.support.v7.widget.LinearLayoutCompat
			android:id="@+id/actionBar"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			>
			<android.support.v7.widget.AppCompatButton
				android:id="@+id/btnMessage"
				android:layout_height="match_parent"
				android:layout_width="wrap_content"
				style="?android:attr/borderlessButtonStyle"
				android:text="@string/main_message_button_name"
				android:background="@drawable/sl_main_button"
				android:textColor="@color/white"
			/>
			<android.support.v7.widget.AppCompatButton
				android:id="@+id/btnContacts"
				android:layout_height="match_parent"
				android:layout_width="wrap_content"
				style="?android:attr/borderlessButtonStyle"
				android:text="@string/main_contacts_button_name"
				android:background="@drawable/sl_main_button"
				android:textColor="@color/white"
			/>
			<android.support.v7.widget.AppCompatButton
				android:id="@+id/btnPandora"
				android:layout_height="match_parent"
				android:layout_width="wrap_content"
				style="?android:attr/borderlessButtonStyle"
				android:text="@string/main_pandora_button_name"
				android:background="@drawable/sl_main_button"
				android:textColor="@color/white"
			 />
		</android.support.v7.widget.LinearLayoutCompat>
    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/drawerConfigPanel"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
		android:background="@color/LightSteelBlue"
        android:clickable="true">
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="118dp"
			android:orientation="horizontal"
            android:background="@color/LightCyan">
			<android.support.v7.widget.AppCompatImageButton
				android:id="@+id/ivMyProfileAvatar"
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:layout_marginLeft="28dp"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:clickable="true"
                android:background="@drawable/sl_main_avatar"/>
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvMyProfileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_margin_max"
                android:layout_toRightOf="@id/ivMyProfileAvatar"
                android:layout_centerVertical="true"
                android:text="用户名称"
                android:textAppearance="@style/TextAppearance.AppCompat.Title" />
			<android.support.v7.widget.AppCompatTextView
				android:id="@+id/tvMyProfileComma"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_alignLeft="@id/ivMyProfileAvatar"
				android:layout_below="@id/ivMyProfileAvatar"
				android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle"
				android:text="”"
				android:textStyle="bold"
				android:textSize="28dp"
				android:singleLine="true"
				/>
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvMyProfileSign"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@id/tvMyProfileComma"
                android:layout_below="@id/ivMyProfileAvatar"
                android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle"
                android:singleLine="true"
                android:layout_marginRight="28dp"
                />
		</RelativeLayout>
        <android.support.v7.widget.ListViewCompat
            android:id="@+id/drawerConfigListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:divider="@android:color/holo_red_dark"
            >
        </android.support.v7.widget.ListViewCompat>
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <android.support.v4.widget.Space
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnLogout"
				android:layout_marginRight="@dimen/login_button_margin"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_margin="@dimen/login_button_margin"
                android:text="@string/logout_button_text"
                />
        </android.support.v7.widget.LinearLayoutCompat>
    </android.support.v7.widget.LinearLayoutCompat>
</android.support.v4.widget.DrawerLayout>
