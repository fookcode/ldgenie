<android.support.v4.widget.DrawerLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/drawerConfig"
	android:layout_height="match_parent"
	android:layout_width="match_parent">
	<android.support.v7.widget.LinearLayoutCompat
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">
		<android.support.v7.widget.Toolbar
			android:id="@+id/tbMain"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:theme="@style/LiteDoodActionBarTheme">
            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/ivMainMenu"
				android:layout_marginRight="@dimen/common_margin_max"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
				android:scaleType="centerInside"
                android:clickable="true"
                android:background="@drawable/sl_main_menu_button_click"
                android:src="@drawable/ic_plus"
                android:layout_gravity="right"
                />
        </android.support.v7.widget.Toolbar>
		<FrameLayout
			android:id="@+id/layoutFragmentContainer"
			android:layout_width="fill_parent"
			android:layout_height="0dp"
			android:layout_weight="1">
		</FrameLayout>
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/Gainsboro"/>
		<android.support.v7.widget.LinearLayoutCompat
			android:id="@+id/llActionBar"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
            android:background="@color/litedood_button_bar_backgroud">
			<android.support.v7.widget.AppCompatImageButton
				android:id="@+id/btnMessage"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				style="?android:attr/borderlessButtonStyle"
                android:src="@drawable/ic_message_focused"
                android:padding="14dp"
                android:scaleType="centerInside"
                android:background="@android:color/transparent"
                android:text="@string/main_message_button_text"/>
			<android.support.v7.widget.AppCompatImageButton
				android:id="@+id/btnContacts"
				android:layout_height="match_parent"
				android:layout_width="wrap_content"
				style="?android:attr/borderlessButtonStyle"
                android:src="@drawable/ic_contacts"
                android:padding="14dp"
                android:scaleType="centerInside"
                android:background="@android:color/transparent"
				android:text="@string/main_contacts_button_text" />
			<android.support.v7.widget.AppCompatImageButton
				android:id="@+id/btnPandora"
				android:layout_height="match_parent"
				android:layout_width="wrap_content"
				style="?android:attr/borderlessButtonStyle"
                android:src="@drawable/ic_pandora"
                android:padding="14dp"
                android:scaleType="centerInside"
                android:background="@android:color/transparent"
				android:text="@string/main_pandora_button_text" />

        </android.support.v7.widget.LinearLayoutCompat>
    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/drawerConfigPanel"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
		android:background="@color/White"
        android:clickable="true">
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="220dp"
			android:orientation="horizontal"
            android:background="@drawable/bg">
			<android.support.v7.widget.AppCompatImageView
				android:id="@+id/ivMyProfileAvatar"
				android:layout_width="108dp"
				android:layout_height="108dp"
				android:layout_centerHorizontal="true"
                android:layout_marginTop="32dp"
                android:scaleType="fitCenter"
                android:clickable="true"
                android:padding="1dp"
                android:background="@drawable/sl_main_avatar"/>
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvMyProfileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivMyProfileAvatar"
				android:layout_margin="@dimen/common_margin"
                android:layout_centerHorizontal="true"
                android:textColor="@color/White"
                android:text="用户名称"
                android:textAppearance="@style/TextAppearance.AppCompat.Title" />
			<android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvMyProfileSign"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_below="@id/tvMyProfileName"
                android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle"
				android:layout_centerHorizontal="true"
                android:textColor="@color/litedood_myself_sign_text"
                android:singleLine="true" />
		</RelativeLayout>
        <android.support.v7.widget.ListViewCompat
            android:id="@+id/drawerConfigListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:divider="@color/LightGrey"
            >
        </android.support.v7.widget.ListViewCompat>
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/common_margin_max"
            android:gravity="center_vertical">
            <android.support.v7.widget.AppCompatImageView
                android:paddingLeft="@dimen/common_margin_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src ="@drawable/ic_exit" />
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnLogout"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:textColor="@color/DarkGray"
                android:text="退出登录"

                style="?android:attr/borderlessButtonStyle" />
        </android.support.v7.widget.LinearLayoutCompat>
    </android.support.v7.widget.LinearLayoutCompat>
</android.support.v4.widget.DrawerLayout>
