<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal|center_vertical"
    android:padding="@dimen/common_padding_min">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/contactAvatar"
        android:layout_width="@dimen/common_avatar_size"
        android:layout_height="@dimen/common_avatar_size"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/common_margin_min"
        />
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/contactName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/contactAvatar"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/common_margin_min"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:singleLine="true"/>
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/contactSign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_margin_min"
        android:layout_toRightOf="@id/contactAvatar"
        android:layout_below="@id/contactName"
        android:layout_alignParentBottom="true"
        android:singleLine="true"/>
</RelativeLayout>