<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:padding="@dimen/common_margin_min">
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/ivItemModelAvatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/common_margin_min"/>
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tvItemModelName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_margin"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/ivItemModelAvatar"/>
    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/cbItemModelChecker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="28dp"
        android:layout_alignParentRight="true"/>
</RelativeLayout>