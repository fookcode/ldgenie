<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="@dimen/common_padding_min"
    >

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/chatItemAvatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/common_margin_max" />

    <android.support.v7.widget.AppCompatTextView
        android:layout_height="20dp"
        android:layout_width="20dp"
        android:id="@+id/chatItemCountIndicator"
        android:text="99"
        android:textColor="@color/White"
        android:layout_marginTop="@dimen/common_margin"
        android:layout_marginRight="@dimen/common_margin"
        android:background="@drawable/sp_message_count_indicator"
        android:layout_toRightOf="@id/chatItemAvatar"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:visibility="gone"
        />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/chatItemName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_margin_min"
        android:layout_toRightOf="@id/chatItemCountIndicator"
        android:layout_alignParentTop="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:singleLine="true"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/chatItemTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_margin"
        android:layout_marginRight="@dimen/common_margin"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="time"
        android:textColor="@color/DarkGray"/>

    <android:android.support.v4.widget.ContentLoadingProgressBar
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/chatItemSendingSatusIndicator"
        android:layout_toRightOf="@id/chatItemAvatar"
        android:layout_below="@id/chatItemName"
        android:layout_alignParentBottom="true"
        style="?android:attr/progressBarStyleSmall"
        android:indeterminateOnly="true"
        android:gravity="center"
        android:visibility="gone" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/chatItemRecentMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/chatItemSendingSatusIndicator"
        android:layout_below="@id/chatItemName"
        android:layout_alignParentBottom="true"
        android:singleLine="true"/>

</RelativeLayout>