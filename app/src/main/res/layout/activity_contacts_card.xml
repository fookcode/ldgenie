<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/LightGrey"
    >
    <android.support.v7.widget.Toolbar
        android:id="@+id/tbContactCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/LiteDoodActionBarTheme"/>

    <android.support.v7.widget.ListViewCompat
        android:id="@+id/lvContactCardItemList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/White"
        android:layout_margin="@dimen/common_padding_max"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btnContactCardSendMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sl_contact_card_button"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:layout_margin="@dimen/common_margin_max"
        android:text="@string/contact_card_button_text"
        />

</android.support.v7.widget.LinearLayoutCompat>